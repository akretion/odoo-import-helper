<odoo>


<record id="account_balance_reset_form" model="ir.ui.view">
    <field name="model">account.balance.reset</field>
    <field name="arch" type="xml">
        <form>
            <group name="main">
                <field name="date" options="{'datepicker': {'warn_future': true}}" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="journal_id" />
                <field name="ref" />
            </group>
            <footer>
                <button
                        name="run"
                        type="object"
                        string="Generate"
                        class="btn-primary"
                    />
                <button special="cancel" string="Cancel" class="btn-default" />
            </footer>
        </form>
    </field>
</record>

<record id="account_balance_reset_action" model="ir.actions.act_window">
    <field name="name">Reset Trial Balance</field>
    <field name="res_model">account.balance.reset</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem
        id="account_balance_reset_root_menu"
        parent="base.menu_custom"
        name="Accounting Switchover"
        sequence="300"
    />

<menuitem
        id="account_balance_reset_menu"
        action="account_balance_reset_action"
        parent="account_balance_reset_root_menu"
        sequence="100"
    />

</odoo>
